<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/addExpense_dest">

    <fragment
        android:id="@+id/addExpense_dest"
        android:name="com.sliebald.pairshare.ui.addExpense.AddExpenseFragment"
        android:label="@string/label_add_entry"
        tools:layout="@layout/fragment_add_expense">
        <action
            android:id="@+id/action_addEntryFragment_to_summaryFragment"
            app:destination="@id/summary_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/summary_dest"
        android:name="com.sliebald.pairshare.ui.summary.SummaryFragment"
        android:label="@string/label_summary"
        tools:layout="@layout/fragment_summary" />
</navigation>